<div id="inspirations-container" class="grid md:grid-cols-3 gap-8 mt-10"></div>

<script>
  async function fetchInspirations() {
    const response = await fetch('/lukemagic/api/ideas.json');
    const ideas = await response.json();
    const randomIdeas = ideas.sort(() => 0.5 - Math.random()).slice(0, 3);

    const container = document.getElementById('inspirations-container');
    container.innerHTML = randomIdeas.map(idea => `
      <div class="card p-6">
        <h3 class="text-xl font-bold font-serif">${idea.data.title}</h3>
        <p class="mt-2 opacity-80">${idea.data.description}</p>
        <p class="mt-4 text-sm font-bold text-magic-purple">${idea.data.category}</p>
      </div>
    `).join('');
  }

  fetchInspirations();
</script>
