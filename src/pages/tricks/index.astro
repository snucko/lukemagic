---
import Base from "../../layouts/Base.astro";
import { getCollection } from 'astro:content';
const tricks = await getCollection('tricks');
---
<Base title="Tricks â€” Luke" description="Collection of magic tricks and routines performed by Luke.">
  <section class="max-w-6xl mx-auto px-6 py-12">
    <h1 class="text-3xl mb-6">Tricks</h1>
    <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6">
      {tricks.map(t => (
        <a class="block p-5 card no-underline hover:border-neutral-600" href={`/tricks/${t.slug}/`}>
          <h3 class="text-xl">{t.data.title}</h3>
          <p class="opacity-80">{t.data.summary}</p>
          <div class="mt-2 text-xs opacity-70">{(t.data.tags || []).join(", ")}</div>
        </a>
      ))}
    </div>
  </section>
</Base>