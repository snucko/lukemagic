---
import Base from "../../layouts/Base.astro";
import { getCollection } from 'astro:content';
export async function getStaticPaths() {
  const all = await getCollection('tricks');
  return all.map((entry) => ({ params: { slug: entry.slug }, props: { entry } }));
}
const { entry } = Astro.props;
const ogImage = `/og/tricks/${entry.slug}.png`;
---
<Base ogImage={ogImage} title={`${entry.data.title} â€” Trick`}>
  <article class="max-w-3xl mx-auto px-6 py-16 prose prose-invert">
    <h1>{entry.data.title}</h1>
    <p class="opacity-80">{entry.data.summary}</p>
    <div class="mb-6 text-sm opacity-70">Tags: {(entry.data.tags || []).join(", ")}</div>
    <div innerHTML={entry.body} />
  </article>
</Base>