---
import Base from "../layouts/Base.astro";
import Inspirations from "../components/Inspirations.astro";
---
<Base title="Luke â€” Magic" description="Street magic, close-up, and stage by Luke.">
  <section class="max-w-6xl mx-auto px-6 py-16">
    <div class="grid md:grid-cols-2 gap-10 items-center">
      <div>
        <h1 class="text-4xl md:text-6xl font-serif font-bold leading-tight">Luke</h1>
        <p class="mt-4 text-lg opacity-90">Card and coin magic with impossible moments and clean endings.</p>
        <div class="mt-6 flex gap-3">
          <a class="btn-ghost" href="/shows/">Upcoming Shows</a>
        </div>
      </div>
      <img src="/media/gallery/row-1-column-1.png" alt="Luke performing" class="rounded-2xl transition-transform duration-300 hover:scale-105" loading="lazy" />
    </div>
  </section>
  <section class="max-w-6xl mx-auto px-6 py-16">
    <h2 class="text-3xl md:text-4xl font-serif font-bold leading-tight text-center">Inspirations</h2>
    <p class="mt-4 text-lg opacity-90 text-center">A glimpse into the world of magic.</p>
    <Inspirations />
  </section>
  <section class="max-w-6xl mx-auto px-6 py-16">
    <div style="text-align:center;">
      <blockquote class="tiktok-embed" cite="https://www.tiktok.com/t/ZTMPd7m4t/" data-video-id="ZTMPd7m4t" style="max-width: 605px; min-width: 325px;">
        <section>
          <a target="_blank" title="Watch on TikTok" href="https://www.tiktok.com/t/ZTMPd7m4t/">Watch on TikTok</a>
        </section>
      </blockquote>
      <script async src="https://www.tiktok.com/embed.js"></script>
    </div>
  </section>
</Base>