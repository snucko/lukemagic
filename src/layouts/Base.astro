---
import Seo from "../components/Seo.astro";
const { title = "Luke — Magic", description = "Street magic, close-up, and stage by Luke.", ogImage = "/media/og-default.png" } = Astro.props;

const personJsonLd = {
  "@context": "https://schema.org",
  "@type": "Person",
  "name": "Luke",
  "url": Astro.site?.toString() ?? "https://luke.tivnan.org",
  "sameAs": []
};
---
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <Seo {title} {description} {ogImage} />
    <script type="application/ld+json">{JSON.stringify(personJsonLd)}</script>
    <link rel="manifest" href="/manifest.webmanifest" />
    <link rel="stylesheet" href="/src/styles/global.css" />
  </head>
  <body class="min-h-screen flex flex-col font-display animate-fade-in">
    <header class="px-6 py-4 border-b border-neutral-800">
      <div class="max-w-6xl mx-auto flex items-center justify-between">
        <a href="/" class="text-xl font-serif font-semibold tracking-wide no-underline">Luke</a>
        <nav class="flex gap-4 text-sm">
          
          <a href="/ideas/" class="relative group">
            <span>Ideas</span>
            <span class="absolute -bottom-1 left-0 w-0 h-0.5 bg-magic-gold transition-all duration-300 group-hover:w-full"></span>
          </a>
          <a href="/shows/" class="relative group">
            <span>Shows</span>
            <span class="absolute -bottom-1 left-0 w-0 h-0.5 bg-magic-gold transition-all duration-300 group-hover:w-full"></span>
          </a>
          <a href="/gallery/" class="relative group">
            <span>Gallery</span>
            <span class="absolute -bottom-1 left-0 w-0 h-0.5 bg-magic-gold transition-all duration-300 group-hover:w-full"></span>
          </a>
          <a href="/press/" class="relative group">
            <span>Press</span>
            <span class="absolute -bottom-1 left-0 w-0 h-0.5 bg-magic-gold transition-all duration-300 group-hover:w-full"></span>
          </a>
          <a href="/about/" class="relative group">
            <span>About</span>
            <span class="absolute -bottom-1 left-0 w-0 h-0.5 bg-magic-gold transition-all duration-300 group-hover:w-full"></span>
          </a>
          <a href="/contact/" class="relative group">
            <span>Contact</span>
            <span class="absolute -bottom-1 left-0 w-0 h-0.5 bg-magic-gold transition-all duration-300 group-hover:w-full"></span>
          </a>
        </nav>
      </div>
    </header>
    <main class="flex-1">{Astro.slots.default ? <slot/> : null}</main>
    <footer class="px-6 py-10 border-t border-neutral-800 text-sm">
      <div class="max-w-6xl mx-auto flex items-center justify-between">
        <p>© {new Date().getFullYear()} Luke</p>
        <div class="flex items-center gap-3 opacity-80">
          <a href="/rss.xml">RSS</a>
          <a href="/sitemap-index.xml">Sitemap</a>
          <a href="/shows.ics">ICS</a>
        </div>
      </div>
    </footer>
  </body>
</html>